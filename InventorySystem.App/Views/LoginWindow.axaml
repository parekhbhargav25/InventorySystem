<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="InventorySystem.App.Views.LoginWindow"
		Title="Login"
		Width="380" Height="260">
	<Grid RowDefinitions="Auto,Auto,Auto,Auto,*" ColumnDefinitions="Auto,*" Margin="16">
		<TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Inventory System Login" FontSize="18" Margin="0,0,0,16"/>
		<TextBlock Grid.Row="1" Grid.Column="0" Text="Username" VerticalAlignment="Center"/>
		<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Username, Mode=TwoWay}"/>
		<TextBlock Grid.Row="2" Grid.Column="0" Text="Password" VerticalAlignment="Center"/>
		<TextBox Grid.Row="2" Grid.Column="1" Name="PasswordBox"/>
		<TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="{Binding ErrorMessage}" Foreground="Red"/>
		<StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
			<Button Content="Login" Command="{Binding LoginCommand}"/>
		</StackPanel>
	</Grid>
</Window>


